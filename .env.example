# --- Core ---
NEXTAUTH_URL=http://localhost:3000
# Generate a 32+ char secret:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET=REPLACE_WITH_LONG_RANDOM_SECRET

DATABASE_URL=postgresql://trailpulse:trailpulse@localhost:5432/trailpulse?schema=public
REDIS_URL=redis://localhost:6379

# --- Google OAuth (Auth.js / NextAuth) ---
GOOGLE_CLIENT_ID=REPLACE_WITH_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=REPLACE_WITH_GOOGLE_CLIENT_SECRET

# IMPORTANT: Must match the NextAuth callback URL for your environment.
# For local dev this should be:
#   http://localhost:3000/api/auth/callback/google
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# Optional admin allowlist:
# Comma-separated emails (lower/upper ok). These users get ADMIN role on sign-in.
ADMIN_EMAILS=you@example.com

# Jobs
WEATHER_SYNC_EVERY_HOURS=6
DIGEST_HOUR_LOCAL=8

# Rate limiting defaults (applies to spammy endpoints)
RATE_LIMIT_WINDOW_SEC=60
RATE_LIMIT_MAX=30

# Weather: Open-Meteo is used by default (no key). This is optional if you later switch providers.
WEATHER_API_KEY=
